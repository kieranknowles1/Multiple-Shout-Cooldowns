{
  "$schema": "https://raw.githubusercontent.com/Exit-9B/MCM-Helper/main/docs/config.schema.json",
  "modName": "MultipleShoutCooldowns",
  "displayName": "Multiple Shout Cooldowns",
  "minMcmVersion": 13,
  "cursorFillMode": "topToBottom",
  "content": [
    {
      "type": "header",
      "text": "$MSCD_Settings"
    },
    {
      "type": "slider",
      "text": "$MSCD_BaseSlots",
      "help": "$MSCD_BaseSlotsDesc",
      "valueOptions": {
        "min": 1,
        "defaultValue": 1,
        "max": 10,
        "step": 1,
        "formatString": "{0}",
        "sourceType": "GlobalValue",
        "sourceForm": "MultipleShoutCooldowns.esp|001"
      }
    },
    {
      "type": "slider",
      "text": "$MSCD_KnownPerSlot",
      "help": "$MSCD_KnownPerSlotDesc",
      "valueOptions": {
        "min": 0,
        "defaultValue": 0,
        "max": 30,
        "step": 1,
        "formatString": "Every {0} known",
        "sourceType": "GlobalValue",
        "sourceForm": "MultipleShoutCooldowns.esp|002"
      }
    },
    {
      "type": "slider",
      "text": "$MSCD_UnlockedPerSlot",
      "help": "$MSCD_UnlockedPerSlotDesc",
      "valueOptions": {
        "min": 0,
        "defaultValue": 15,
        "max": 30,
        "step": 1,
        "formatString": "Every {0} unlocked",
        "sourceType": "GlobalValue",
        "sourceForm": "MultipleShoutCooldowns.esp|D63"
      }
    },

    {
      "type": "header",
      "text": "$MSCD_Info"
    },
    {
      "type": "slider",
      "text": "$MSCD_Available",
      "help": "$MSCD_AvailableDesc",
      "groupBehavior": "disable",
      "valueOptions": {
        "sourceType": "GlobalValue",
        "sourceForm": "MultipleShoutCooldowns.esp|004"
      }
    }
  ]
}
